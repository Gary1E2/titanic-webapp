apiVersion: apps/v1
kind: Deployment
metadata:
  name: ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ui
  template:
    metadata:
      labels:
        app: ui
    spec:
      containers:
        - name: ui
          image: aiad-ui:latest
          imagePullPolicy: Never
          ports:
            - containerPort: 5000
          env:
            - name: SHARED_DIR
              value: /usr/src/app/shared_volume
            - name: PROCESSING_URL
              value: http://processing:8000
            - name: TRAINING_URL
              value: http://training:8001
            - name: INFERENCE_URL
              value: http://inference:8002
          volumeMounts:
            - name: shared
              mountPath: /usr/src/app/shared_volume
      volumes:
        - name: shared
          persistentVolumeClaim:
            claimName: shared-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: ui
spec:
  type: NodePort
  selector:
    app: ui
  ports:
    - port: 5000
      targetPort: 5000
      nodePort: 30050
